import random
# definice funkce pro vytisknutí horizontálního oddělení pomlčkami
def oddeleni():
    print("-"*50)   
print("Hi there!")
oddeleni()
print("I've generated a random 4 digit number for you.")
print("Let's play a bulls and cows game.")
oddeleni()
problem = False
ranCelk = str("")
# nalezení náhodného čísla
while not problem:
    problem = True
    for i in range (0, 4):
        if i == 0: 
            ranInt = random.randrange(1,10)
        elif i > 0:
            ranInt = random.randrange(0,10)
        ranStr = str(ranInt)
        ranCelk = ranCelk + ranStr
    sortuj = ''.join(sorted(ranCelk))
    c = str("")
    for i in sortuj:
        if c == i:
            problem = False
            ranCelk = ""
            break
        else: problem = True
        c = i
bulls = int
problem = False
poc = int(0)
str4 = "Inserted value doesn't have 4 characters."
number = "Inserted value is not a number."
same = "Inserted value has at least 2 characters equal."
first0 = "Inserted value has first character = 0."
mistake = "You have made following mistake(s):"
while bulls != 4:
    while not problem:
        if poc == 0:
                print("Enter a number")
        tip = input(">>>")
        problem = True
        if len(tip) != 4:
            if problem:
                problem = False
                print(mistake)
            print(str4)
        if not tip.isnumeric():
            if problem:
                problem = False
                print(mistake)
            print(number)
        c = str(" ")
        sortuj = ''.join(sorted(tip))
        for i in sortuj:
            if c == i:
                if problem:
                    problem = False
                    print(mistake)
                print(same)
                break
            else: c = i
        if tip[0] == "0":
            if problem:
                problem = False
                print(mistake)
            print(first0)
        else: 
            if problem:
                poc += 1
    bulls = 0
    cows = 0
    for i in tip:
        for j in ranCelk:
            if i == j and tip.index(i) == ranCelk.index(j):
                bulls += 1
            if i == j and tip.index(i) != ranCelk.index(j):
                cows += 1
    if bulls < 4: 
        problem = False
        print(bulls," bulls, ",cows," cows")
        oddeleni()
    else:
        print("Correct, you've guessed the right number\nin",poc,"guesses!!")
        oddeleni()
        print("That's amazing!!")
